<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<AnchorPane prefHeight="500.0" prefWidth="800.0" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="model.resources.InstructionsMenuController">
   <children>
      <VBox prefHeight="500.0" prefWidth="800.0">
         <children>
            <GridPane prefHeight="110.0" prefWidth="800.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                  <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Instructions" textAlignment="CENTER" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.valignment="CENTER">
                     <font>
                         <Font name="Ubuntu Bold" size="40.0"/>
                     </font>
                  </Text>
                   <Button fx:id="backButton" mnemonicParsing="false" onMouseClicked="#backButtonClicked" text="←"
                           translateX="15.0" translateY="15.0" GridPane.halignment="LEFT" GridPane.valignment="TOP"/>
               </children>
            </GridPane>
            <HBox prefHeight="395.0" prefWidth="800.0">
               <children>
                   <TextArea fx:id="textArea" editable="false" prefHeight="305.0" prefWidth="700.0"
                             text="Welcome to Name Sayer!&#10;&#10;Name Sayer is a name pronounciation application designed and created by Rowan Hart and Michelle Tan. It has been designed to improve users' pronounciation of difficult names, an important skill in an increasingly multicultural world.&#10;&#10;Start&#10;- Add a database by specifying the folder containing your recordings&#10;&#10;Create&#10;- Press the create button and enter a name&#10;- Note: Only letters A-Z, numbers, spaces, hyphens and underscores are allowed&#10;&#10;Record&#10;- Press the record button when ready&#10;- Say the name clearly&#10;- Replay your recording and record it again if necessary&#10;- Save the audio to continue&#10;- Press the save audio button to continue&#10;- Note: If you are creating a recording for an existing name, you can can compare your recording&#10;&#10;Practice&#10;&#10;Play List&#10;- Select more than one name and press the practice button to continue&#10;- By pressing the list play button, you can automatically play through the list of names&#10;- Note: You can shuffle the list names&#10;&#10;Play Inidividual&#10;- If you press play, the program will play the selected name&#10;&#10;You can also:&#10;- Check out the details of the name&#10;- Add a rating by pressing ☹&#10;- Record your own pronounciation of the name&#10;&#10;Details&#10;- Clicking details shows you all the different pronounciation recordings of the name&#10;- You can set a default name to be played when you practice in lists&#10;- Delete permanently removes the audio file from your computer&#10;&#10;Compare&#10;- When you record an existing name, you can compare your recording with other versions&#10;- You can rate the quality of your other recordings&#10;- Press continue and save your audio, otherwise record it again if necessary&#10;&#10;Bad Recordings&#10;- Right-click the ☹ (or click from the main menu) to view all the ratings of your recordings&#10;- If you left-click the ☹ when not on the main menu, you can give your recording a star rating&#10;&#10;Mic Testing&#10;- You can test the audio level of your microphone whenever you are on a recording menu&#10;&#10;For further information or help regarding Name Sayer, please email rhar768@aucklanduni.ac.nz or mtan264@aucklanduni.ac.nz."
                             wrapText="true">
                     <HBox.margin>
                        <Insets bottom="50.0" left="50.0" right="50.0" top="50.0" />
                     </HBox.margin>
                     <cursor>
                        <Cursor fx:constant="NONE" />
                     </cursor>
                  </TextArea>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
